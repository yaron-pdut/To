{
  "version": "0.2.0",
  "configurations": [
    
    {
      "type": "node",
      "request": "launch",
      "name": "Debug TypeScript (Express)",
      "program": "${workspaceFolder}/my-typescript-project/src/main.ts",
      "runtimeArgs": [
        "-r",
        "ts-node/register"
      ],
      "env": {
        "TS_NODE_PROJECT": "${workspaceFolder}/my-typescript-project/tsconfig.json"
      },
      "skipFiles": [
        "<node_internals>/**"
      ]
    }
  ]
}
