import express from 'express';

const app = express();
const port = 3000;

app.get('/greet', (req, res) => {
    const name = req.query.Name;
    if (name) {
        res.send(`Hello, ${name}!`);
    } else {
        res.send('Hello, stranger!');
    }
});

app.listen(port, () => {
    console.log(`Server is running at http://localhost:${port}`);
});